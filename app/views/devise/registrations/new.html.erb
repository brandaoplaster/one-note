<div class="container-full">

  <div class="content">
    <div id="content-image-left"></div>
  </div>

  <div class="content">
    <div class="content-form">
      <div class="form-header">
        <h1>FaÃ§a seu cadastro</h1>
      </div>

      <div class="form-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field-content">
            <i class="material-icons icon-field">email</i>
            <%= f.email_field :email, class: "input-field", placeholder: "E-mail" %>
          </div>

          <div class="field-content">
            <i class="material-icons icon-field">lock_outline</i>
            <%= f.password_field :password, class: "input-field", placeholder: "Password" %>
          </div>

          <div class="field-content">
            <i class="material-icons icon-field">lock_outline</i>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field", placeholder: "Password confirmation" %>
          </div>

          <div class="field">
            <%= f.submit "Cadastrar", class: "button-field" %>
          </div>
        <% end %>
      </div>

      <div class="form-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
